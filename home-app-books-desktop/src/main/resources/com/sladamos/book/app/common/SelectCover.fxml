<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>
<?import java.net.URL?>
<VBox alignment="CENTER" spacing="16" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.sladamos.book.app.common.SelectCoverController">
    <ImageView fx:id="coverPreview" fitHeight="375" fitWidth="250" preserveRatio="true" />
    <Button fx:id="selectCoverButton" onAction="#onSelectCoverClicked" styleClass="secondary--button" text="Select cover" />
    <Button fx:id="removeCoverButton" onAction="#onRemoveCoverClicked" text="Delete cover" visible="false">
        <styleClass>
            <String fx:value="secondary--button" />
            <String fx:value="delete--cover-button" />
        </styleClass>
    </Button>
    <stylesheets>
        <URL value="@select-cover.css" />
        <URL value="@../books-common.css" />
    </stylesheets>
</VBox>
