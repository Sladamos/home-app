<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sladamos.book.app.add.AddBookController">
    <left>
        <VBox spacing="16">
            <Button fx:id="returnToItemsButton" mnemonicParsing="false" onAction="#onReturnButtonClicked" styleClass="primary--button" text="Return" />
            <Button fx:id="addAuthorButton" mnemonicParsing="false" onAction="#onAddAuthorClicked" styleClass="primary--button" text="Add author" />
            <Button fx:id="addGenreButton" mnemonicParsing="false" onAction="#onAddGenreClicked" styleClass="primary--button" text="Add genre" />
        </VBox>
    </left>
    <right>
        <HBox alignment="CENTER" spacing="20.0" styleClass="form--container">
            <VBox alignment="CENTER" spacing="16">
                <ImageView fx:id="coverPreview" fitHeight="375" fitWidth="250" preserveRatio="true" />
                <Button fx:id="selectCoverButton" onAction="#onSelectCoverClicked" styleClass="secondary--button" text="Select cover" />
                <Button fx:id="removeCoverButton" onAction="#onRemoveCoverClicked" text="Delete cover" visible="false">
               <styleClass>
                  <String fx:value="secondary--button" />
                  <String fx:value="delete--cover-button" />
               </styleClass></Button>
            </VBox>

            <ScrollPane fitToWidth="true">
                <VBox spacing="8">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Dodaj książkę" />
                    <Label text="Tytuł:*" />
                    <TextField fx:id="titleField" promptText="Tytuł" />

                    <Label text="Autorzy:*" />
                    <VBox fx:id="authorsBox" spacing="4" />

                    <Label text="ISBN:" />
                    <TextField fx:id="isbnField" promptText="ISBN" />

                    <Label text="Wydawnictwo:" />
                    <TextField fx:id="publisherField" promptText="Wydawnictwo" />

                    <Label text="Pożyczona dla:" />
                    <TextField fx:id="borrowedByField" promptText="Pożyczona dla" />

                    <Label text="Liczba stron:" />
                    <Spinner fx:id="pagesSpinner" promptText="Liczba stron" />

                    <Label text="Ocena:" />
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <CheckBox fx:id="ratingEnabledCheckBox" text="Ustaw ocenę" />
                        <Slider fx:id="ratingSlider" blockIncrement="1" disable="true" majorTickUnit="1" max="5" min="1" minorTickCount="0" prefWidth="120" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
                        <Label fx:id="ratingValueLabel" text="brak" />
                    </HBox>

                    <Label text="Ulubiona:" />
                    <CheckBox fx:id="favoriteCheckBox" />

                    <Label text="Opis:" />
                    <TextArea fx:id="descriptionArea" prefRowCount="3" promptText="Opis" />

                    <Label text="Data przeczytania:" />
                    <DatePicker fx:id="readDatePicker" promptText="Data przeczytania" />

                    <Label text="Gatunki:*" />
                    <VBox fx:id="genresBox" spacing="4" />

                    <Button fx:id="addBookButton" alignment="CENTER" onAction="#onAddBookClicked" styleClass="primary--button" text="Dodaj książkę" />
                </VBox>
            </ScrollPane>
        </HBox>
    </right>
    <stylesheets>
        <URL value="@add-book.css" />
        <URL value="@../books-common.css" />
    </stylesheets>
</BorderPane>
